{
  "name": "hono",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "dev:log": "bun run --watch src/server.ts 2>&1 | tee dev.log | sed -r 's/\\x1B\\[[0-9;]*[JKmsu]//g'",
    "start": "bun run src/server.ts",
    "initdb": "bun run src/utils/initdb.ts",
    "lint": "eslint src && tsc --noEmit",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src"
  },
  "dependencies": {
    "croner": "^9.1.0",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.5",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/bun": "^1.2.21",
    "@types/node-cron": "^3.0.11",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
