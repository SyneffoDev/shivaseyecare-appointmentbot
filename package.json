{
  "name": "hono",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "dev:log": "bun run --watch src/server.ts 2>&1 | tee dev.log | sed -r 's/\\x1B\\[[0-9;]*[JKmsu]//g'",
    "start": "bun run src/server.ts",
    "initdb": "bun run src/utils/initdb.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "croner": "^9.1.0",
    "dayjs": "^1.11.18",
    "hono": "^4.9.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/bun": "latest",
    "@types/node-cron": "^3.0.11",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.42.0"
  }
}
